<%= render 'navigation' %>
<p class="fs-1 text-center text-article">Articles</p>
<div class="container">
  <div class="card">
    <div class="card-body text-center">
      <div class="container text-center">
        <div class="row">
          <div class="col">
            <%= link_to "Create".html_safe, new_article_path, :class=>"btn btn-primary" %>
          </div>
          <div class="col">
            <%= link_to "Back".html_safe, root_path, :class=>"btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="card" style="width: 100%;">
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th colspan="3">Actions</th>
            <th>Title</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><i class="fa-solid fa-flag"></i><%= link_to 'Show', article_path(article) =%></td>
              <td><i class="fa-solid fa-pen-to-square"></i>
                <%= link_to 'Edit', edit_article_path(article) =%></td>
              <td><i class="fa-solid fa-trash"></i>
                <%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, turbo_confirm: 'Are you sure?' } %></td>
              <td><%= article.title %></td>
              <td><%= article.description %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render 'footer' %>
